@model LearnLangs.Models.PlacementTest

@{
    ViewData["Title"] = "Placement test - " + Model.TestName;
}

<div class="mb-4">
    <h1 class="h4 fw-bold">@Model.TestName</h1>
    <p class="text-muted mb-1">@Model.Description</p>
    <p class="small text-muted">
        Câu hỏi: @Model.TotalQuestions |
        Thời gian gợi ý: @Model.DurationMinutes phút |
        Loại bài test: @Model.TestType
    </p>
</div>

<form asp-action="Submit" method="post">
    <input type="hidden" name="testId" value="@Model.TestId" />

    @foreach (var q in Model.Questions.OrderBy(q => q.OrderNumber))
    {
        <div class="card mb-3">
            <div class="card-body">
                <p class="fw-semibold mb-2">
                    Câu @q.OrderNumber: @q.QuestionText
                </p>

                @foreach (var opt in q.Options.OrderBy(o => o.OrderNumber))
                {
                    var inputId = $"q_{q.QuestionId}_opt_{opt.OptionId}";
                    <div class="form-check mb-1">
                        <input class="form-check-input"
                               type="radio"
                               name="q_@q.QuestionId"
                               id="@inputId"
                               value="@opt.OptionId" />
                        <label class="form-check-label" for="@inputId">
                            @opt.OptionText
                        </label>
                    </div>
                }
            </div>
        </div>
    }

    <button type="submit" class="btn btn-primary">
        Nộp bài & xem trình độ
    </button>
</form>
