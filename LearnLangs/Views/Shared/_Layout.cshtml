@using Microsoft.AspNetCore.Identity
@using LearnLangs.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var theme = Context.Request.Cookies["ui-theme"] ?? "light";
}

<!DOCTYPE html>
<html lang="vi" data-bs-theme="@theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - LearnLangs</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LearnLangs.styles.css" asp-append-version="true" />

    @RenderSection("Head", required: false)
</head>
<body class="bg-body-tertiary d-flex flex-column min-vh-100">

    <!-- Topbar -->
    <nav class="navbar navbar-light bg-white border-bottom sticky-top">
        <div class="container-fluid">
            <button id="btnSidebar" class="btn btn-outline-secondary me-2" type="button"
                    aria-label="Toggle menu" aria-controls="appSidebar" aria-expanded="false">
                <i class="bi bi-list"></i>
            </button>

            <a class="navbar-brand ms-2" asp-controller="Home" asp-action="Index">
                <i class="bi bi-play-circle-fill text-primary me-1"></i>LearnLangs
            </a>

            <ul class="navbar-nav flex-row d-none d-md-flex ms-3 align-items-center">
                <li class="nav-item dropdown me-2">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Flashcard</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Flashcards" asp-action="Index" asp-route-mode="basic">Common English</a></li>
                        <li><a class="dropdown-item" asp-controller="Flashcards" asp-action="Index" asp-route-mode="ielts">Ielts Vocabulary</a></li>
                        <li><a class="dropdown-item" asp-controller="Flashcards" asp-action="Index" asp-route-mode="hsk">HSK Chinese</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown me-2">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Games</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Exams" asp-action="Index"><i class="bi bi-trophy me-1"></i>Thi (Bảng & xếp hạng)</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" asp-controller="Games" asp-action="Index">Danh sách Level</a></li>
                    </ul>
                </li>
            </ul>

            <div class="d-flex align-items-center gap-2 gap-md-3 ms-auto">
                <button id="btnTheme" class="btn btn-sm btn-outline-secondary" type="button" title="Toggle theme">
                    <i class="bi @(theme=="dark" ? "bi-moon-stars" : "bi-sun")"></i>
                    <span class="d-none d-lg-inline ms-1">Theme</span>
                </button>

                @if (SignInManager.IsSignedIn(User))
                {
                    var me = await UserManager.GetUserAsync(User);
                    <span class="text-muted d-none d-sm-inline">Hello @me?.UserName!</span>
                    <span class="badge bg-primary-subtle text-primary">XP: @me?.TotalXP</span>
                    <span class="badge bg-warning-subtle text-warning">Streak: @me?.CurrentStreak</span>
                    <form class="d-inline ms-1 ms-md-2" asp-area="Identity" asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index","Home")" method="post">
                        <button class="btn btn-sm btn-outline-secondary">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-sm btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    <a class="btn btn-sm btn-primary" asp-area="Identity" asp-page="/Account/Register">Sign up</a>
                }
            </div>
        </div>
    </nav>

    <!-- App shell -->
    <div class="app-wrap d-flex flex-grow-1">
        @await Html.PartialAsync("_Sidebar")

        <!-- Content -->
        <main class="app-content flex-grow-1 p-3 p-md-4 pb-5">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="app-footer mt-auto">
        <div class="container-fluid footer-wrap">
            <div class="row g-4 align-items-start">
                <div class="col-12 col-md-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-play-circle-fill text-primary fs-4 me-2"></i>
                        <span class="fw-bold fs-5">LearnLangs</span>
                    </div>
                    <p class="text-secondary small mb-2">
                        Nền tảng học ngôn ngữ thông minh kết hợp AI – luyện từ vựng, phát âm và giao tiếp tự nhiên.
                    </p>
                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-secondary btn-sm rounded-pill" asp-controller="Translate" asp-action="Index">Bắt đầu học</a>
                        <a class="btn btn-primary btn-sm rounded-pill" asp-controller="Courses" asp-action="Index">Khoá học</a>
                    </div>
                </div>

                <div class="col-6 col-md-2">
                    <div class="footer-title">Sản phẩm</div>
                    <ul class="footer-links">
                        <li><a asp-controller="Flashcards" asp-action="Index" asp-route-mode="basic">Flashcards</a></li>
                        <li><a asp-controller="Pronunciation" asp-action="Index">Pronunciation</a></li>
                        <li><a asp-controller="Dictation" asp-action="Index">Dictation</a></li>
                        <li><a asp-controller="Games" asp-action="Index">Games</a></li>
                    </ul>
                </div>

                <div class="col-6 col-md-2">
                    <div class="footer-title">Tài nguyên</div>
                    <ul class="footer-links">
                        <li><a asp-controller="Courses" asp-action="Index">Courses</a></li>
                        <li><a asp-controller="Settings" asp-action="Index">Settings</a></li>
                        <li><a href="#" target="_blank" rel="noopener">Hướng dẫn</a></li>
                        <li><a href="#" target="_blank" rel="noopener">FAQ</a></li>
                    </ul>
                </div>

                <div class="col-12 col-md-4">
                    <div class="footer-title">Kết nối</div>
                    <div class="d-flex align-items-center gap-3 mb-2">
                        <a class="footer-social" href="#" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                        <a class="footer-social" href="#" aria-label="YouTube"><i class="bi bi-youtube"></i></a>
                        <a class="footer-social" href="#" aria-label="GitHub"><i class="bi bi-github"></i></a>
                        <a class="footer-social" href="#" aria-label="Email"><i class="bi bi-envelope"></i></a>
                    </div>
                    <div class="text-secondary small">
                        Liên hệ: <a href="mailto:support@learnlangs.app">support@learnlangs.app</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container-fluid d-flex flex-column flex-sm-row align-items-center justify-content-between gap-2">
                <div class="text-secondary small">
                    © @DateTime.Now.Year — <strong>LearnLangs</strong>. All rights reserved.
                </div>
                <div class="text-secondary small">
                    <a href="#" class="me-3">Điều khoản</a>
                    <a href="#">Quyền riêng tư</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function () {
            const KEY = 'll.sidebar';
            const btn = document.getElementById('btnSidebar');
            if (localStorage.getItem(KEY) === 'collapsed') {
                document.body.classList.add('sidebar-collapsed');
                btn?.setAttribute('aria-expanded', 'false');
            } else {
                btn?.setAttribute('aria-expanded', 'true');
            }
            btn?.addEventListener('click', () => {
                const collapsed = document.body.classList.toggle('sidebar-collapsed');
                localStorage.setItem(KEY, collapsed ? 'collapsed' : 'expanded');
                btn.setAttribute('aria-expanded', (!collapsed).toString());
            });
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') document.body.classList.remove('sidebar-open');
            });
        })();

        (function () {
            const btn = document.getElementById('btnTheme');
            if (!btn) return;
            btn.addEventListener('click', () => {
                const html = document.documentElement;
                const cur = html.getAttribute('data-bs-theme') || 'light';
                const next = (cur === 'dark') ? 'light' : 'dark';
                html.setAttribute('data-bs-theme', next);
                const exp = new Date(Date.now() + 180 * 24 * 60 * 60 * 1000).toUTCString();
                document.cookie = `ui-theme=${next}; expires=${exp}; path=/; SameSite=Lax`;
                btn.querySelector('i').className = (next === 'dark') ? 'bi bi-moon-stars' : 'bi bi-sun';
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
